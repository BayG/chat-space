#contents.clearfix
  = render partial: "common/sidebar"
  .main-content
    .main-content-header
      .main-content-header-group-info
        %p.main-content-header__group-title
          = @group.name
        %br/
        %p.main-content-header__members
          Members:
          - @group.users.each do |user|
            = user.name
      = link_to "Edit", edit_group_path(params[:group_id]), class: 'edit-group-btn'
    .main-content-body
      - @messages.each do |message|
        .main-content-body-block
          %p.main-content-body-block__name
            = message.user.name
          %p.main-content-body-block__time
            = message.created_at.strftime("%Y-%m-%d %H:%M:%S")
          %br
          %p.main-content-body-block__message
            = message.body
    .main-content-footer
      = form_for [@group, @message] do |f|
        = f.text_area :body, class: "main-content-footer__message-box", placeholder: "Type a message here"
        = fa_icon "image"
        = f.submit "Send", class: "main-content-footer__send-button", "data-disable-with" => "Save"
