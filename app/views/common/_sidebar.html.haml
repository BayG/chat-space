.sidebar
  .sidebar-account
    .sidebar-account-info.clearfix
      %p.sidebar-account-info__name
        = current_user.name
      .sidebar-account-info__actionbtn
        = link_to new_group_path, class: 'create-group-btn' do
          = fa_icon "pencil-square-o"
        = link_to edit_user_registration_path, class: 'edit-account-btn' do
          = fa_icon "cog"
  .sidebar-group
    - @groups.each do |group|
      = link_to group_messages_path(group) do
        .sidebar-group-block
          %p.sidebar-group-block__group-name
            = group.name
          %br/
          %p.sidebar-group-block__latest-message
            - if group.messages.last
              = group.messages.last.body
            - else
              = "No message yet"
